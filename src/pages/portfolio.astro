---
import Layout from '../layouts/Layout.astro';
import PropertyGrid from '../components/PropertyGrid.astro';
import portfolioData from '../data/portfolio.json';

const { properties } = portfolioData;

// Transform data for the grid component
const gridProperties = properties.map(property => ({
  id: property.id,
  title: property.title,
  location: property.location,
  image: property.featuredImage,
  link: `/portfolio/${property.slug}`,
  hasVideo: !!property.featuredVideo
}));
---

<Layout title="Portfolio | Lefferts" description="Explore Lefferts' diverse real estate portfolio spanning luxury condos and innovative developments in New York City and Miami.">
  <PropertyGrid properties={gridProperties} />
</Layout>