<script>
  document.addEventListener('DOMContentLoaded', function () {
    const newsletterForm = document.querySelector('.newsletter-form');

    if (newsletterForm) {
      newsletterForm.addEventListener('submit', async function (e) {
        e.preventDefault();

        const submitButton = this.querySelector('.newsletter-submit');
        const originalText = submitButton.textContent;

        // Show loading state
        submitButton.textContent = 'SENDING...';
        submitButton.disabled = true;
        submitButton.style.opacity = '0.7';

        const formData = new FormData(this);
        const data = {
          form_type: 'newsletter',
          name: formData.get('name'),
          email: formData.get('email'),
        };

        // Try multiple possible paths for the PHP handler
        const possiblePaths = [
          '/form-handler.php',
          './form-handler.php',
          '../form-handler.php',
          window.location.origin + '/form-handler.php',
        ];

        let lastError = null;
        let success = false;

        for (let path of possiblePaths) {
          try {
            const response = await fetch(path, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            // If we get a 404, try the next path
            if (response.status === 404) {
              continue;
            }

            // Check if response is actually JSON
            const contentType = response.headers.get('content-type');
            if (!contentType || !contentType.includes('application/json')) {
              const textResponse = await response.text();

              // If it's HTML with 404, continue to next path
              if (
                textResponse.includes('404') ||
                textResponse.includes('Not Found')
              ) {
                continue;
              }

              throw new Error(
                'Server returned non-JSON response: ' +
                  textResponse.substring(0, 100)
              );
            }

            const result = await response.json();

            if (response.ok && result.success) {
              // Show success message
              const container = document.querySelector('.newsletter-container');
              container.innerHTML = `
                            <div class="newsletter-success">
                                <h3>Successfully Subscribed!</h3>
                                <p>You'll receive updates about Leffert's latest developments and news.</p>
                            </div>
                        `;
              success = true;
              break;
            } else {
              const errorMessage = result.error || 'Unknown error occurred';
              throw new Error(errorMessage);
            }
          } catch (error) {
            lastError = error;

            // If this is the last path, we'll handle the error below
            if (path === possiblePaths[possiblePaths.length - 1]) {
              break;
            }
          }
        }

        // If we didn't succeed, show error
        if (!success) {
          let errorMessage =
            'There was an error subscribing to the newsletter. ';

          if (lastError && lastError.message.includes('404')) {
            errorMessage +=
              'The form handler was not found. Please contact the site administrator.';
          } else if (
            lastError &&
            lastError.message.includes('already subscribed')
          ) {
            errorMessage =
              'This email address is already subscribed to our newsletter.';
          } else if (
            lastError &&
            lastError.name === 'TypeError' &&
            lastError.message.includes('fetch')
          ) {
            errorMessage += 'Please check your internet connection.';
          } else if (lastError && lastError.message.includes('JSON')) {
            errorMessage += 'Server response format error.';
          } else if (lastError && lastError.message.includes('non-JSON')) {
            errorMessage += 'Server configuration issue.';
          } else {
            errorMessage += 'Please try again later.';
          }

          alert(
            errorMessage +
              (lastError ? '\n\nTechnical details: ' + lastError.message : '')
          );

          // Reset button
          submitButton.textContent = originalText;
          submitButton.disabled = false;
          submitButton.style.opacity = '1';
        }
      });
    }
  });
</script>

